div#userwrapper
    h1 Username: #{userresult['Username']}

    a href="/users/#{userresult['Id']}/edit" 
        p Edit 
    a href="/users/" 
        p Log out 
 
div#otheruserswrapper 
    - if userresult['Admin'] == "Admin" 
        h1 Users: 
        ul
            - userlist.each do |user| 
                -if user['Admin'] != "Admin"
                    li
                        h2 #{user['Username']}
                        h3 Id: #{user['Id']} 
                        div.userinfo
                            a href="/users/#{user['Id']}/edit" 
                                p edit
                            div.delete
                                form action="/users/#{user['Id']}/delete" method="post"
                                    input type="submit" Value="Delete"

        h1 Admins:
        ul
            - userlist.each do |user| 
                -if user['Admin'] == "Admin"
                    li
                        h2 #{user['Username']}
                        h3 Id: #{user['Id']} 
                        div.userinfo
                            a href="/users/#{user['Id']}/edit" 
                                p edit
                            div.delete
                                form action="/users/#{user['Id']}/delete" method="post"
                                    input type="submit" Value="Delete"
